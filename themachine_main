#include <OneWire.h>
#include <DallasTemperature.h>

#define ONE_WIRE_BUS 2



OneWire ourWire(ONE_WIRE_BUS);


DallasTemperature sensors(&ourWire);


double C = 0;
//int tempin = A3;  // analog pin used to connect the potentiometer
//int timpin = A4;  // analog pin used to connect the potentiometer
byte ledpin = 1;
byte servopin1 = 0;
byte servopin2 = 5;
int setemp = 0;
int setime = 0;

void setup()
{
  pinMode(ledpin, OUTPUT);
  //pinMode(tempin, INPUT);
  //pinMode(timpin, INPUT);
  pinMode(servopin1, OUTPUT);
  pinMode(servopin2, OUTPUT);
  digitalWrite(servopin1, LOW);
  digitalWrite(servopin2, LOW);
  //Serial.begin(9600);
  sensors.begin();
  // -------------manuálisan a víz fölötti magasságra kell rakni a teafiltert
  //Serial.println("teabag up");

}


void loop() 
{
  setemp = analogRead(3);   //P3         // reads the value of the potentiometer (value between 0 and 1023)
  setime = analogRead(2);   //P4
  setemp = map(setemp, 0, 1023, 50, 100);
  setime = map(setime, 0, 1023, 1, 15); //600 sec - 10 min
  //Serial.println(setemp);
  //Serial.println(setime);

  sensors.requestTemperatures(); // Send the command to get temperatures
  C = sensors.getTempCByIndex(0);
  //Serial.println(C);

  if (setemp < (C - 5)) {
    digitalWrite(ledpin, HIGH);
    //Serial.println("Temperature is too low");
  }
  else {
    if (setemp >= (C - 5) && setemp <= (C + 5)) {
      //-------------- servo lent!
      //Serial.println("bag down");
      digitalWrite(servopin1, HIGH);
      digitalWrite(servopin2, LOW);
      delay(3000);
      digitalWrite(servopin1, LOW);
      digitalWrite(servopin2, LOW);

      for (int i = 0; i <= setime * 60; i++) {
        delay(500);
        digitalWrite(ledpin, LOW);
        delay(500);
        digitalWrite(ledpin, HIGH);
        //Serial.println(setime*60-i);
      }
      //delay(setime*1000);
      //---------------- servo fent!
      //Serial.println("teabag up");
      digitalWrite(servopin1, LOW);
      digitalWrite(servopin2, HIGH);
      delay(3000);
      digitalWrite(servopin1, LOW);
      digitalWrite(servopin2, LOW);
      
      while (1) {
        delay(1000);
        digitalWrite(ledpin, HIGH);
        //Serial.println("end");} //infinite cycle could be replaced by continous tepereature check
      }
    }
    else {
      digitalWrite(ledpin, LOW);
      delay(100);
      digitalWrite(ledpin, HIGH);
      delay(100);
    }
  }
}
